<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>GitHub Summary</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Jean Pimentel">

    <link href="/static/css/bootstrap.css" rel="stylesheet">
    <link href="/static/css/style.css" rel="stylesheet">
    <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
    </style>

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

  </head>

  <body>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">

          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="/">GitHub Summary</a>
          <div class="nav-collapse">
            {% if app.session.has('access_token') %}
              <ul class="nav">
                <li{% if app.request.get('_route') == 'home' %} class="active"{% endif %}><a href="/">Home</a></li>
                <li{% if app.request.get('_route') == 'events_users' %} class="active"{% endif %}><a href="/events/users">Users Events</a></li>
                <li{% if app.request.get('_route') == 'events_repos' %} class="active"{% endif %}><a href="/events/repositories">Repositories Events</a></li>
              </ul>

              <ul class="nav pull-right">
                <li><a href="/cron">Update Now!</a></li>
                <li><a href="/logout">Logout</a></li>
              </ul>
            {% endif %}
          </div><!--/.nav-collapse -->
        </div>
      </div>

    </div>

    <div class="container">
        {% block content %}{% endblock %}
    </div> <!-- /container -->

    <script src="/static/js/jquery.js"></script>
    <script src="/static/js/bootstrap.js"></script>
    <script src="/static/js/functions.js"></script>
  </body>
</html>
